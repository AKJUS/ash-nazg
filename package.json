{
  "name": "ash-nazg",
  "version": "0.0.1",
  "scripts": {
    "start": "node server.js",
    "watch-server": "nodemon -w server.js --exec 'npm run start'",
    "build-js": "browserify app.js > public/js/app.js",
    "build-css": "cleancss -o ./public/app.min.css app.css",
    "build": "npm run build-css && npm run build-js",
    "watch": "nodemon --ignore ./public/ -e js,css,html,png,jpg,svg --exec 'npm run build'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/w3c/ash-nazg.git"
  },
  "license": "MIT",
  "devDependencies": {
    "normalize.css":    "^3.0.3",
    "clean-css":        "^3.2.10",
    "babel": "^5.2.17",
    "babelify": "^6.1.0",
    "browserify": "^10.1.3",
    "nodemon": "1.3.7",
  },
  "dependencies": {
    "react": "^0.13.3",
    "react-router": "^0.13.2",
    "whatwg-fetch": "^0.7.0",
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
